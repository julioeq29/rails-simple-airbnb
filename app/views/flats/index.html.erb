<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>All our flats</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description %></p>
            <p class="card-text"><%= flat.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
